<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6EBF0"
    tools:context="cn.co.com.newpanda.module.home.homeactivity.CctvActivity">
    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cctv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_chevron_left_white_36dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/cctv_title"
            />
    </android.support.v7.widget.Toolbar>
    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
        android:id="@+id/cctv_jcvideo"
        android:layout_width="match_parent"
        android:layout_height="230dp">
    </fm.jiecao.jcvideoplayer_lib.JCVideoPlayer>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cctv_shou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首播时间："
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_toRightOf="@id/cctv_shou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/cctv_time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="栏目介绍"
            android:layout_below="@id/cctv_shou"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/cctv_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cctv_shou"
            android:src="@mipmap/com_facebook_tooltip_blue_bottomnub"
            />
        <TextView
            android:paddingTop="20dp"
            android:textSize="20dp"
            android:id="@+id/cctv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cctv_img"
            android:visibility="gone"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/cctv_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"></android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cctv_viewpager">
        </android.support.v4.view.ViewPager>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ffffff"/>
    <LinearLayout
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/cctv_img_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/personal_shoucang_img"/>
        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            />
        <ImageView
            android:id="@+id/cctv_img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pe_share_img"/>
    </LinearLayout>
</LinearLayout>
