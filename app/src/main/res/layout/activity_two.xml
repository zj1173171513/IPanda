<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.TwoActivity">

    <LinearLayout
        android:id="@+id/tiao_rll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#303F9F"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/twoImg"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@mipmap/panda_sign"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/twoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="熊猫直播"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/twoHD"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/hudong_sign"/>
        <ImageView
            android:id="@+id/twoLonge"
            android:layout_width="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"

            android:layout_height="30dp"
            android:src="@mipmap/personal_login_head"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </FrameLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/color_bg_selected"/>
        <RadioGroup
            android:id="@+id/rgTools"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/twoZH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/radio_group_selector"
                android:drawableTop="@mipmap/tab_home_normal"
                android:gravity="center"
                android:text="首页"/>

            <RadioButton
                android:id="@+id/twoZB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/radio_group_selector"
                android:drawableTop="@mipmap/tab_panda_eye_normal"
                android:gravity="center"
                android:text="熊猫直播"/>

            <RadioButton
                android:checked="false"
                android:id="@+id/twoGG"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/radio_group_selector"
                android:drawableTop="@mipmap/tab_panda_culture_normals"
                android:gravity="center"
                android:text="滚滚视频"/>
            <RadioButton
                android:checked="false"
                android:id="@+id/twoBB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/radio_group_selector"
                android:drawableTop="@mipmap/tab_panda_eye_pressed"
                android:gravity="center"
                android:text="熊猫播报"/>

            <RadioButton
                android:checked="false"
                android:id="@+id/twoZG"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/radio_group_selector"
                android:drawableTop="@mipmap/tab_live_china_normal"
                android:gravity="center"
                android:text="直播中国"/>
        </RadioGroup>



</LinearLayout>
