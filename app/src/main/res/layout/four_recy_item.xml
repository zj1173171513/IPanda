<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/four_item_one_img"
            android:layout_width="100dp"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/four_item_two_img"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/four_item_one_img"
            android:src="@drawable/default_time_view" />

        <ImageView
            android:id="@+id/four_item_three_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignLeft="@id/four_item_two_img"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/lpanda_live_layer" />

        <TextView
            android:id="@+id/four_item_one_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/four_item_three_img"
            android:text="Live"
            android:textColor="#ffffff"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/four_item_two_text"
        />
</LinearLayout>